<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}Slackoverflow
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"/> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="height: 70px;">
				<a class="navbar-brand" href="{{ path('all_topic') }}">Slackoverflow</a>
				<div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
				<ul class="nav navbar-nav navbar-right">
					{% if app.user %}
							<li>
								<a class="nav-link" href="#">Poster un sujet</a>
							</li>
                            <li>
                                <a class="nav-link" href="{{ path('all_topic') }}">Voir les sujets</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>


                    {% else %}

                            <li>
                                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('registration') }}">Créer un compte</a>
                            </li>

                    {% endif %}
				</ul>
			</nav>
			{% block body %}{% endblock %}
			{% block javascripts %}{% endblock %}
		</body>
	</html>