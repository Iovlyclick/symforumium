{% extends 'base.html.twig' %}
{% block
title %}
    Connexion
{% endblock %}

{% block body %}

    <div class="container d-flex">
        <div class="row w-100 justify-content-center">
            <div class="col-lg-6 col-md-8 login-box">

                <div class="col-lg-12 login-title">
                    Se connecter    
                </div>

                <div class="col-lg-12 login-form">
                    <div class="col-lg-12 login-form">

                        <form class="form-group" role="form" method="post">
                            <div>
                                {% if error %}
                                    <div class="alert alert-danger">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% elseif app.user %}

                                    <div class="mb-3">
                                        Bonjour                                
                                        {{ app.user.name }}
                                        ,                                    
                                        <a href="{{ path('app_logout') }}">
                                            Se d√©connecter                          
                                        </a>
                                    </div>

                                {% else %}

                                    <label for="email" class="form-control-label">
                                        Adresse e-mail                   
                                    </label>
                                    <input id="inputEmail" type="email" class="form-control" name="email" value="{{ last_username }}" required autofocus />
                                </div>

                                <div class="form-group">
                                    <label for="password" class="form-control-label">
                                        Mot de passe                    
                                    </label>
                                    <input id="inputPassword" type="password" class="form-control" name="password" required />
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                                <div class="col-lg-12 login-btm login-button">
                                    <button type="submit" class="btn btn-outline-primary">
                                        Connexion                          
                                    </button>
                                </div>

                            {% endif %}

                        </form>

                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
    