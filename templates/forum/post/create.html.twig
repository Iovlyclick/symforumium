{% extends 'base.html.twig' %}

{% form_theme formPost 'bootstrap_4_layout.html.twig' %}

{% block title %}Répondre au sujet
{% endblock %}

{% block body %}
<div class="mx-auto" style="width: 50%;">
	<h1 class="pt-5">
		Réponse au sujet {{ topic }}
	</h1>

	<div>
		{{ form_start(formPost) }}

		{{ form_row(formPost.content) }}
	</div>

	<button type="submit" class='btn btn-warning'>
		{% if editMode %}
			Éditer
		{% else %}
			Poster
		{% endif %}
	</button>
	{{ form_end(formPost) }}
</div>
{% endblock %}
