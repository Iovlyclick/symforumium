{% extends 'base.html.twig' %}
{% block
title %}
	Connexion
{% endblock %}
{% block body %}

	<div class="container d-flex ">
		<div class="row w-100 justify-content-center">
			<div class="col-lg-6 col-md-8 login-box ">

				<div class="col-lg-12 login-key">
					<i class="fa fa-key" aria-hidden="true"></i>
				</div>

				<div class="col-lg-12 login-title">
				</div>

				<div class="col-lg-12 login-form">
					<div class="col-lg-12 login-form">

						<form class="form-group" role="form" method="post">
							<div>
								{% if error %}
									<div class="alert alert-danger">
										{{ error.messageKey|trans(error.messageData, 'security') }}
									</div>
								{% elseif app.user %}

									<div class="mb-3">
										Bonjour


										{{ app.user.username }}
										,


										<a href="{{ path('app_logout') }}">
											Se déconnecter


										</a>
									</div>

								{% else %}
								<div class="card-title text-center mb-4">
									<h5 class="mt-5 text-warning font-weight-bold">HELLO</h5>
									<p class="font-weight-light">Connectez-vous pour accéder au forum</p>
								</div>
									<label for="email" class="form-control-label">
										Adresse e-mail

									</label>
									<input id="inputEmail" type="email" class="form-control" name="email" value="{{ last_username }}" required autofocus/>
								</div>

								<div class="form-group">
									<label for="password" class="form-control-label">
										Mot de passe


									</label>
									<input id="inputPassword" type="password" class="form-control" name="password" required/>
								</div>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

								<div class="login-btm login-button">
									<button type="submit" class="btn btn btn-outline-warning">
										Connexion


									</button>
								</div>

							{% endif %}

						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
